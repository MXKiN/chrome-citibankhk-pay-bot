{
  "manifest_version": 2,
  "name": "Citibank HK Pay Bot",
  "version": "1.0.1",
  "description": "Pay bill with Citibank HK repeatedly with small amount each time",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "96": "images/icon96.png",
      "128": "images/icon128.png"
    }
  }
}
